WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    code: code
    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "Code: "

            TextInput:
                id: code
                multiline: False

        Button:
            text: "Submit"
            on_release:
                root.enter_code()
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"