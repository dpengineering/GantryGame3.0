#: kivy 1.0.10

<ColorScreen>:
	back_button: BackButton
	red_button: RedButton
	orange_button: OrangeButton
	yellow_button: YellowButton
	green_button: GreenButton
	blue_button: BlueButton
	purple_button: PurpleButton
	light_blue_button: LightBlueButton
	lime_green_button: LimeGreenButton
	red_orange_button: RedOrangeButton
	pink_button: PinkButton
	lilac_button: LilacButton
	black_button: BlackButton
	
	background_color: 0, 0, 0, 1

	canvas:
		Color:
			rgba: self.background_color
		Rectangle:
			size: self.size

	ImageButton:
		id: BackButton
		source: 'GUI/images/back.png'
		pressed_src: 'GUI/images/back_pressed.png'
		size_hint: 0.1, 0.1
		pos_hint: {'top': 1, 'left': 0}
		on_release: root.manager.transition.direction = 'down'
		on_release: root.manager.current = 'joystick screen'

	Button:
		id: RedButton
		current_background_color: 0.8, 0, 0, 1
		canvas:
			Color: 
				rgba: self.current_background_color
			Rectangle:
				size: self.size
				pos: self.pos

		on_press: self.current_background_color = 1, 1, 1, 1
		on_touch_up: self.current_background_color = 1, 0, 0, 1

		size_hint: 0.16, 0.20
		pos_hint: {'center_x': 0.25, 'center_y': 0.7}
		col_str: '#c40909'

	Button:
