#:kivy 1.0.10

<MainScreen>:
	background_color: 0, 0, 0, 1

	canvas:
		Color:
			rgba: self.background_color
		Rectangle:
			size: self.size
			pos: self.pos
	
	Image:
		source: "GUI/images/title.png"
		size_hint: 0.65, 0.65
		pos_hint: {"top": 1, "center_x": 0.5}
		allow_stretch: True
	
	ImageButton:
		source: "GUI/images/freehand.png"
		pressed_src: "GUI/images/freehand_pressed.png"
		size_hint: 0.25, 0.25
		pos_hint: {"bot": 0, "center_x": 0.3}
		on_release: root.manager.transition.direction = 'right'
		on_release: root.manager.current = 'joystick screen'
	
	ImageButton:
		source: "GUI/images/from_file.png"
		pressed_src: "GUI/images/from_file_pressed.png"
		size_hint: 0.25, 0.25
		pos_hint: {"bot": 0, "center_x": 0.7}
		on_release: root.manager.transition.direction = 'left'
		on_release: root.manager.current = 'gallery screen'
